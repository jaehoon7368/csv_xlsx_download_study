<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sh.app.menu.model.dao.MenuDao">
	<select id="findAll" resultMap="menuMap">
		select
			*
		from
			menu
		order by
			id desc
	</select>
	<resultMap type="menu" id="menuMap"></resultMap>
	
	<select id="findByType" resultMap="menuMap">
		select
			*
		from
			menu
		where
			type = #{type}
	</select>

	<select id="findByTypeTaste" resultMap="menuMap">
		select
			*
		from
			menu
		<where>
			<if test="type != 'all'">
				type = #{type}
			</if>
			<if test="taste != 'all'">
				and
				taste = #{taste}
			</if>
		</where>
	</select>
	
	<select id="findById" resultMap="menuMap">
		select
			*
		from
			menu
		where
			id = #{id}
	</select>
	
	<insert id="insertMenu">
		insert into
			menu
		values(
			seq_menu_id.nextval,
			#{restaurant},
			#{name},
			#{price},
			#{type},
			#{taste}
		)
	<selectKey order="AFTER" resultType="_int" keyProperty="id">
			select
				seq_menu_id.currval
			from
				dual
	</selectKey>
	</insert>
	
	<update id="updateMenu">
		update
			menu
		set
			restaurant = #{restaurant},
			name = #{name},
			price = #{price},
			type = #{type},
			taste = #{taste}
		where
			id = #{id}
	</update>
	
	<delete id="deleteMenu">
		delete
			menu
		where
			id = #{id}
	</delete>
</mapper>